---
layout: layouts/base
---

<article>
    <h1>{{ title }}</h1>
    <p>{{ description }}</p>
    <p>
        Published: <time datetime="{{ page.date | dateISO }}">{{ page.date | datePretty }}</time>
        {% if updated %}
        | Updated: <time datetime="{{ updated | dateISO }}">{{ updated | datePretty }}</time>
        {% endif %}
    </p>
    <hr>
    {{ content | safe }}
</article>
<div class="hr-dashed"></div>
<p class="text-right"><small>
    Got something to share? The source for this page is available on {% page_source_link 'GitHub' %}
</small>
</p>