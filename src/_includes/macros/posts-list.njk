{%- macro postsList(posts) -%}

<ul class="post-list">
    {% for post in posts | sortDesc %}
    <li class="post-item">
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <p class="no-margin">
            {{ post.data.description }}
            <i><a href="{{ post.url }}">read more...</a></i>
        </p>
        <div class="post-item-meta">
            <div class="text-s">
                <time datetime="{{ post.data.date | dateISO }}">{{ post.data.date | datePretty }}</time>
                <!-- {% if post.data.updated %}
                | <i>updated: <time datetime="{{ post.data.updated | dateISO }}">{{ post.data.updated | datePretty }}</time></i>
                {% endif %} -->
            </div>
            <ul class="tag-list">
                {% for tag in post.data.tags %}
                <li class="tag"><a href="/tags/{{ tag }}/">{{ tag }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </li>
    <hr>

    {% endfor %}
</ul>

{% endmacro %}